<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @book.user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @new_book %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to(@book.user) do %>
            <%= image_tag @book.user.get_profile_image, size:"100x100" %><br>
            <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, @book %></td>
          <td><%= @book.body %></td>
            <% if @book.favorited_by?(current_user) %>
              <td>
                <%= link_to book_favorite_path(@book),method: :delete do %>
                  ♥<%= @book.favorites.count %>
                <% end %>
              </td>
                <% else %>
              <td>
                <%= link_to book_favorite_path(@book),method: :post do %>
                  ♥<%= @book.favorites.count %>
                <% end %>
              </td>
            <% end %>

            <% if @book.user == current_user %>
            <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success" %></td>
            <% end %>
            <% if @book.user == current_user %>
            <td><%= link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
            <% end %>
            <td>コメント数：<%= @book.book_comments.count %></td>
        </tr>
      </table>

      <table class='table'>
        <% @book.book_comments.each do |book_comment| %>
        <tr>
          <td><%= link_to(book_comment.user) do %>
          <%= image_tag book_comment.user.get_profile_image, size:"100x100" %>
          <%= book_comment.user.name %>
          <% end %>
          </td>
          <td><%= book_comment.comment %></td>
          <% if @book.user == current_user %>
          <td><%= link_to 'Destroy', [@book,book_comment], method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
          <% end %>
        </tr>
        <% end %>
      </table>
      <%= form_with model: [@book,@book_comment] do |f| %>
        <div class="form-group">
          <%= f.text_area :comment, class: 'form-control book_comment' %>
        </div>
        <div>
          <%= f.submit "送信" %>
        </div>
      <% end %>
    </div>
  </div>
</div>